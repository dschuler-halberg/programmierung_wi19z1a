<Window x:Class="_22_fragen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_22_fragen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <DataGrid x:Name="DgMain" AutoGenerateColumns="True" ItemsSource="{Binding}" SelectionMode="Single"/>
    <Button Grid.Row="1" x:Name="BtSelect" Content="Auswählen" Click="BtSelect_Click"/>
    <Label x:Name="LbMessage" />
  </Grid>
</Window>
